<AnchorPane prefHeight="740.0" prefWidth="1140.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse.project.controller.TransportController">
   <children>
      <HBox fx:id="lblTransporstID" alignment="CENTER_LEFT" layoutX="31.0" layoutY="27.0" prefHeight="35.0" prefWidth="1020.0" spacing="55.0">
         <children>
            <Label text="Tranport ID">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label fx:id="lblTransportID" alignment="CENTER" prefHeight="24.0" prefWidth="87.0" style="-fx-background-color: transparent; -fx-border-width: 0px 0px   2px 0px; -fx-border-color: #1e3799;" text="1">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox fx:id="txtTransportType" alignment="CENTER_LEFT" layoutX="25.0" layoutY="81.0" prefHeight="35.0" prefWidth="1020.0" spacing="45.0">
         <children>
            <Label text="Tranport Type">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <RadioButton fx:id="rbExport" mnemonicParsing="false" text="Export">
               <toggleGroup>
                  <ToggleGroup fx:id="TransportType" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbImport" mnemonicParsing="false" text="Import" toggleGroup="$TransportType" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="137.0" prefHeight="35.0" prefWidth="1020.0" spacing="70.0">
         <children>
            <Label text="Start Date">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <DatePicker fx:id="dpStartDate" prefHeight="28.0" prefWidth="226.0" style="-fx-border-width: 0px 0px 2px 0px; -fx-border-color: #1e3799;" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="248.0" prefHeight="35.0" prefWidth="1020.0" spacing="80.0">
         <children>
            <Label text="Driver ID">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="cmdDriverID" prefHeight="28.0" prefWidth="226.0" style="-fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: #1e3799;" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="193.0" prefHeight="35.0" prefWidth="1020.0" spacing="80.0">
         <children>
            <Label text="End Date">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <DatePicker fx:id="dpEndDate" prefHeight="26.0" prefWidth="222.0" />
         </children>
      </HBox>
      <TableView fx:id="tblTransport" layoutX="9.0" layoutY="448.0" prefHeight="278.0" prefWidth="912.0" style="-fx-border-color: #2c3e50;">
        <columns>
          <TableColumn fx:id="colTransportID" prefWidth="149.60000324249268" style="-fx-border-color: #2c3e50;" text="Transport ID" />
          <TableColumn fx:id="colTransportType" prefWidth="190.3999786376953" style="-fx-border-color: #2c3e50;" text="Transport Type" />
            <TableColumn fx:id="colStartDate" prefWidth="204.79998779296875" style="-fx-border-color: #2c3e50;" text="Start Date" />
            <TableColumn fx:id="colEndDate" prefWidth="195.99993896484375" style="-fx-border-color: #2c3e50;" text="End Date" />
            <TableColumn fx:id="colDriverID" prefWidth="167.2001953125" style="-fx-border-color: #2c3e50;" text="Driver ID" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" layoutX="24.0" layoutY="344.0" onDragDetected="#generateReport" prefHeight="35.0" prefWidth="1020.0" spacing="50.0">
         <children>
            <Button fx:id="btnTransportDetail" layoutX="220.0" layoutY="14.0" mnemonicParsing="false" onAction="#generateTransportRepo" prefWidth="150.0" style="-fx-background-color: #747d8c;" text="Payment Details" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deleteTransport" prefWidth="100.0" style="-fx-background-color: #c0392b;" text="Delete" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#updateTranport" prefWidth="100.0" style="-fx-background-color: #3498db;" text="Update" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnSave" alignment="CENTER" mnemonicParsing="false" onAction="#saveTransport" prefWidth="100.0" style="-fx-background-color: #78e08f;" text="Save" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
